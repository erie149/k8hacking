{
  "id": "sparkSlaveController",
  "kind": "ReplicationController",
  "apiVersion": "v1beta1",
  "desiredState": {
    "replicas": 10,
    "replicaSelector": {"name": "spark-slave"},
    "podTemplate": {
      "desiredState": {
         "manifest": {
           "version": "v1beta1",
           "id": "sparkSlaveController",
           "containers": [{
             "name": "spark-slave",
             "image": "jayunit100/spark4",
             "cpu": 200,
             "command":["/bin/bash","/opt/run.sh","slave"],
             "ports": [{ "containerPort": 6379, "hostPort": 6380 }]
           }]
         }
      },
      "labels": {
        "name": "spark-slave",
        "uses": "spark-master"
      }
    }
  },
  "labels": {"name": "spark-slave"}
}
